{% extends '@NetgenBlockManager/api/block/block.html.twig' %}

{% import '@NetgenBlockManager/api/parts/macros.html.twig' as macros %}

{% trans_default_domain 'ngbm_app' %}

{% block content %}
    {% set block_name = block.parameter('block_name') %}

    {% if not block_name.empty %}
        {{ macros.info('block.info.twig_block'|trans({ '%block%': block_name.value }), 'icon-twig_block') }}
    {% else %}
        {{ macros.notice('block.notice.empty_twig_block'|trans) }}
    {% endif %}
{% endblock %}
