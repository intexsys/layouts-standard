{% extends '@nglayouts_admin/app/block/block.html.twig' %}

{% import '@NetgenLayoutsAdmin/app/parts/macros.html.twig' as macros %}

{% trans_default_domain 'nglayouts_app' %}

{% block content %}
    {% if not block.parameter('link').empty %}
        <p data-inline>
            <span contenteditable="true" data-attr="text" data-hint="{{ 'block.placeholder.button'|trans }}" data-inline-child>
                {{ block.parameter('text').value }}
            </span>
        </p>
    {% else %}
        <div class="attr-hide" data-attr="text">
            {{ macros.notice('block.notice.no_link'|trans) }}
        </div>
    {% endif %}
{% endblock %}
