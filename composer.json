{
    "name": "netgen/block-manager-standard",
    "description": "Netgen Layouts standard blocks & layouts",
    "license": "proprietary",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://www.netgenlabs.com"
        }
    ],
    "require": {
        "netgen/block-manager": "~0.12.0",
        "michelf/php-markdown": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "symfony/phpunit-bridge": "^4.1",
        "phpstan/phpstan": "^0.10",
        "phpstan/phpstan-phpunit": "^0.10",
        "franzl/studio": "*"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always",
        "phpstan": "@php vendor/bin/phpstan analyse --level=7 --ansi lib bundle",
        "phpstan-tests": "@php vendor/bin/phpstan analyse -c phpstan.tests.neon --level=7 --ansi tests"
    },
    "repositories": [
        { "type": "composer", "url": "https://packagist.netgen.biz" }
    ],
    "autoload": {
        "psr-4": {
            "Netgen\\BlockManager\\Standard\\": "lib/",
            "Netgen\\Bundle\\BlockManagerStandardBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\BlockManager\\Standard\\Tests\\": "tests/lib/",
            "Netgen\\BlockManager\\Tests\\": "vendor/netgen/block-manager/tests/lib/"
        },
        "files": [
            "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.12.x-dev"
        }
    }
}
